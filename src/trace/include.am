# Include the src/ so we can use the trace/events.h statement when including
# any file in that directory.
AM_CPPFLAGS += -I$(srcdir)/src

noinst_LTLIBRARIES += \
	src/trace/libor-trace.la
LIBOR_TRACE_LA_SOURCES = \
	src/trace/trace.c

TRACEHEADERS = \
	src/trace/trace.h \
	src/trace/events.h

if USE_EVENT_TRACING_DEBUG
TRACEHEADERS += \
	src/trace/debug.h
endif

# Library source files.
src_trace_libor_trace_la_SOURCES = $(LIBOR_TRACE_LA_SOURCES)

noinst_HEADERS+= $(TRACEHEADERS)
